<!-- views/profile.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Profile</title>
  </head>
  <body>
    <% if (user) { %>
    <h1>Welcome, <%= user.displayName %>!</h1>
    <a href="/auth/logout">Logout</a>
    <% } else { %>
    <h1>Please log in to see your profile.</h1>
    <a href="/auth/google">Login with Google</a>
    <% } %>
  </body>
</html>
